true = 0
while true == 0:
    import random
    geheimzahl = random.randrange (40)
    eingabe = 0
    while eingabe != geheimzahl:
        eingabe = int(input("Bitte geben Sie eine Zahl ein:"))
        if eingabe > geheimzahl:
            print("Leider falsch. Ihre Eingabe ist größer als die Geheimzahl. :-(")
        if eingabe < geheimzahl:
            print("Leider falsch. Ihre Eingabe ist kleiner als die Geheimzahl. :-(")
    print("Herzlichen Glückwunsch! Sie haben die richtige Zahl ausgewählt!")
    print("Ihre Geheimzahl war "+str(geheimzahl)+"!")
    print(" ")
    versuch = str(input("Möchten Sie es erneut mit einer neuen Geheimzahl versuchen? (ja/nein)"))
    if versuch == "ja":
        print("Es wurde ine neue Geheimzahl festgelegt. Bitte versuchen Sie es erneut.")
        print(" ")
    if versuch == "nein":
        print("Das Projekt ist beendet.")
        while true == 0:
            true == 0
